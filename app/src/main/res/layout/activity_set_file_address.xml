<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ffececec">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="#ffffff"
            android:gravity="center"
            android:text="指定文件路径"
            android:textColor="#ff242424"
            android:textSize="19sp"/>

        <EditText
            android:id="@+id/edit_text_file_name"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="#ffe0e6ff"
            android:gravity="center"
            android:layout_margin="8dp"
            android:inputType="number"
            android:hint="请输入文件路径"/>

        <Button
            android:id="@+id/button_save"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/bg_btn_orange"
            android:text="保存"
            android:layout_margin="20dp"
            android:textColor="#ffffff"
            android:textSize="18sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:gravity="center_vertical"
            android:textSize="18sp"
            android:text="可以从下列文件选择："/>


        <TextView
            android:id="@+id/text_view_file1"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_margin="8dp"
            android:background="#ffe0e6ff"
            android:gravity="center"
            android:textSize="18sp"
            android:text="c:\\autostart.txt"/>


        <TextView
            android:id="@+id/text_view_file2"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="#ffe0e6ff"
            android:gravity="center"
            android:textSize="18sp"
            android:text="c:\\r.status"
            android:layout_margin="8dp"/>


    </LinearLayout>
</RelativeLayout>
