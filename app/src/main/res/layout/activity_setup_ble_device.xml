<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ffececec">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="#ffffff"
            android:gravity="center"
            android:text="创建Tracker设备"
            android:textColor="#ff242424"
            android:textSize="19sp"/>

        <EditText
            android:id="@+id/edit_text_device_imei"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="#ffe0e6ff"
            android:gravity="center"
            android:layout_margin="8dp"
            android:inputType="number"
            android:hint="IMEI"/>

        <EditText
            android:id="@+id/edit_text_device_imsi"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_margin="8dp"
            android:background="#ffe0e6ff"
            android:gravity="center"
            android:inputType="number"
            android:hint="IMSI"/>

        <EditText
            android:id="@+id/edit_text_device_edrmac"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="#ffe0e6ff"
            android:gravity="center"
            android:layout_margin="8dp"
            android:inputType="textEmailAddress"
            android:hint="EDR MAC"/>

        <Button
            android:id="@+id/button_save"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/bg_btn_orange"
            android:text="保存"
            android:layout_margin="20dp"
            android:textColor="#ffffff"
            android:textSize="18sp"/>
    </LinearLayout>
</RelativeLayout>
